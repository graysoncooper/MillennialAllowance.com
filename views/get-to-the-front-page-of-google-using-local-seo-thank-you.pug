extends ./_layouts/landing-page-no-header
include ./_mixins/landing-page

block variables
   - var title = 'Thanks for signing up!';
   - var currentPath = '/get-to-the-front-page-of-google-using-local-seo-thank-you';

block no_hero

block content
    .section.dark-green
        .small-container
            .full
                h1 Thanks for signing up!
                p.bold You will receive your first email shortly!
                p 
                    | If you have any questions or want to give feedback at any time, feel free to send me an email at 
                    a(href="mailto:me@shaneburkhart.com") Me@ShaneBurkhart.com
                    | I will get back to you personally :)
                p
                    b I'll talk to you soon,
                    br
                    | Shane Burkhart


    script.
        ga('send', 'event', 'Lead', 'subscribe');
        fbq('track', 'Lead');
